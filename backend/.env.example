# Configurações do Servidor
NODE_ENV=development
PORT=5000
HOST=localhost

# Configurações do Banco de Dados
MONGODB_URI=mongodb://localhost:27017/techrun
MONGODB_URI_TEST=mongodb://localhost:27017/techrun_test

# Configurações de Autenticação JWT
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Configurações de Email (para recuperação de senha)
EMAIL_FROM=noreply@techrun.com
EMAIL_FROM_NAME=TechRun

# SendGrid (opcional)
SENDGRID_API_KEY=your-sendgrid-api-key

# SMTP (alternativa ao SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Configurações de Upload
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=104857600
# 100MB em bytes

# Configurações de AWS S3 (para produção)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=techrun-videos
AWS_REGION=us-east-1

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# 15 minutos
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081

# Configurações de Logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Configurações de Cache Redis (opcional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Configurações de Análise de Vídeo
VIDEO_PROCESSING_TIMEOUT=300000
# 5 minutos
MAX_VIDEO_DURATION=300
# 5 minutos em segundos

# Configurações de MediaPipe (quando integrado)
MEDIAPIPE_MODEL_PATH=./models/pose_landmarker.task
MEDIAPIPE_CONFIDENCE_THRESHOLD=0.5

# Configurações de Segurança
ENCRYPTION_KEY=your-32-character-encryption-key-here
HASH_SALT_ROUNDS=12

# Configurações de Monitoramento
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# Configurações de Analytics
GOOGLE_ANALYTICS_ID=your-ga-tracking-id

# Configurações de Notificações Push
FCM_SERVER_KEY=your-firebase-server-key
APNS_KEY_ID=your-apns-key-id
APNS_TEAM_ID=your-apns-team-id

# Configurações de Desenvolvimento
DEBUG_MODE=true
VERBOSE_LOGGING=true
ENABLE_SWAGGER=true

# Configurações de Backup
BACKUP_SCHEDULE=0 2 * * *
# Todo dia às 2h da manhã
BACKUP_RETENTION_DAYS=30

# Configurações de Limpeza Automática
CLEANUP_TEMP_FILES=true
CLEANUP_INTERVAL_HOURS=24
CLEANUP_OLD_VIDEOS_DAYS=90

# Configurações de Performance
CLUSTER_MODE=false
WORKER_PROCESSES=auto
MEMORY_LIMIT=512
# MB

# Configurações de API Externa
EXTERNAL_API_TIMEOUT=30000
# 30 segundos
EXTERNAL_API_RETRIES=3

# Configurações de Webhook
WEBHOOK_SECRET=your-webhook-secret-key
WEBHOOK_TIMEOUT=10000
# 10 segundos